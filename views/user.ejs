    <section>
        <h2> <%= title %></h2>
        <div class="row-fluid" id="user">
            <div class="list offset3 span6">
            <table class="table table-hover table-bordered">
            <thead class="span6"><tr><th>Users</th></tr></thead>
            <tbody>
                <tr>
                <td>Name</td>
                <td>Department</td>
                <td>User Name</td>
                <td>Password</td>
                <td>Create Time</td>
                <td>Delete</td>
            </tr>
                <% users.forEach( function (user){ %>
                <tr>
                    <td> <%= user.name %> </td> 
                    <td> <%= user.email %> </td>
                    <td> <%= user.username %> </td>
                    <td> <%= user.password %> </td>
                    <td> <%= user.create_at %> </td>
                    <td> <a href="/user/delete/<%= user._id %>">Delete</a></td>
                <% }); %>
            </tbody>
            </table>
            </div>
        </div>

        
        <div class="row-fluid">
            <div class="list offset3 input-append">
                <form action="/user/create" method="post">
                        <input type="text" name="name" autofocus="autofocus" placeholder="Name" length="5px"/>
                        <input type="text" name="department" autofocus="autofocus" placeholder="Department"/><br><br>
                        <input type="text" name="username" id="username" autofocus="autofocus" placeholder="Username">
                        <input type="password" name="password" autofocus="autofocus" placeholder="password"/>
                        <br><br>
                        <input type="submit" class="btn" name="todo-submit" value="Add To List"/>
                </form>
            </div>
        </div>
