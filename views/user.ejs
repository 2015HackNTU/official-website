<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
  </head>
  <body>
    <div class="hero-unit">
        <h1><%= h1 %></h1>
        <p>Welcome! The following are the user lists!</p>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/user">User List</a></li>
        </ul>
    </div>

    <div class="row-fluid">
    	<div class="list offset3 span6">
    	<table class="table table-hover table-bordered">
    	<thead class="span6"><tr><th>Users</th></tr></thead>
        <tbody>
            <tr>
            <td>Name</td>
            <td>Email</td>
            <td>User Name</td>
            <td>Password</td>
            <td>Delete</td>
        </tr>
            <% users.forEach( function (user){ %>
    		<tr>
                <td> <%= user.name %> </td> 
                <td> <%= user.email %> </td>
                <td> <%= user.username %> </td>
                <td> <%= user.password %> </td>
                <td> <a href="/user/delete/<%= user._id %>">Delete</a></td>
            <% }); %>
        </tbody>
    	</table>
    	</div>
	</div>

    
	<div class="row-fluid">
        <div class="list offset3 input-append">
        	<form action="/user/create" method="post">
        			<input type="text" name="name" autofocus="autofocus" placeholder="name" length="5px"/>
                    <input type="email" name="email" autofocus="autofocus" placeholder="email"/><br><br>
                    <input type="text" name="username" id="username" autofocus="autofocus" placeholder="Username">
                    <input type="password" name="password" autofocus="autofocus" placeholder="password"/>
                    <br><br>
        			<input type="submit" class="btn" name="todo-submit" value="Add To List"/>
        	</form>
        </div>
	</div>



  </body>
</html>