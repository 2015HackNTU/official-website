<!doctype html>
<html>
<head>
	<title>Edit Posts</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<style>
		body 		{ padding-top:80px; }
	</style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">
	
	<h1><span class="fa fa-pencil-square-o"></span> New Posts</h1>

	<!-- LOGIN FORM -->
	<form action="/posts/edit/<%= posts._id %>" method="post" enctype="multipart/form-data" >
		<div class="form-group">
			<label>Title</label>
			<input type="text" class="form-control" name="title" value="<%=posts.title%>">
		</div>
		<div class="form-group">
			<label>Content</label>
			<textarea type="text" class="form-control" name="content" rows="10" value=""><%=posts.content%>
			</textarea>
		</div>
		<div class="form-group">
			<label>Tags</label>
			<input type="text" class="form-control" name="tag"><%= posts.tag %>	
		</div>
		<div class="form-froup">
			<label for="upload">Photo Upload</label><%=posts.photo%>
			<input multiple="multiple" name="image" type="file">
		</div>
		<br>
		<input type="hidden" name="user_id" value="<%= posts.user_id %>">
		<button type="submit" class="btn btn-warning btn-lg">Submit</button>
		<a href="/profile" class="btn btn-primary btn-lg">Back</a>
		<script>
			$('.btn').hover(function(){
				var date = new Date(); // New Date object to store date value
				document.getElementById('create_at').value = date.toDateString();
				console.log(document.getElementById('create_at').value)
			})
		</script>
	</form>

	<hr>

	<div class="text-center">
		<p>- Hack NTU -</p>
	</div>

</div>
</div>
</body>
</html>