 	<section style="padding:40px;padding-top:60px">
	<h1><%= title %></h1>
	
	<div class="row-fluid">
    	<div class="list offset3 span6">
    	<table class="table table-hover table-bordered">
    	<thead class="span6">
    		<tr>
    			<th><%= title %></th>
    		</tr>
    	</thead>
        <tbody>
            <tr>
	            <td>Title</td>
	            <td>Department</td>
	            <td>Author</td>
	            <td>Content</td>
	            <td>Tags</td>
	            <td>Create Time</td>
	            <td>Delete</td>
       		</tr>
            <% blogposts.forEach( function (blogposts){ %>
    		<tr>
                <td> <%= blogposts.title %> </td> 
                <td> <%= blogposts.department %> </td>
                <td> <%= blogposts.author %> </td>
                <td> <%= blogposts.content %> </td>
                <td> <%= blogposts.tag %> </td>
                <td> <%= blogposts.create_at %> </td>
                <td> <a href="/posts/delete/<%= blogposts._id %>">Delete</a></td>
            <% }); %>
        </tbody>
    	</table>
    	</div>
	</div>
	
	<div class="row-fluid">
        <div class="list offset3 input-append">
        	<form action="/posts/create" method="post">
        			<input type="text" name="title" autofocus="autofocus" placeholder="Title" length="5px"/>
                    <input type="department" name="department" autofocus="autofocus" placeholder="Department"/>
					<input type="text" name="author" Placeholder="Author"/>
                    <br><br>
                    <input type="textarea" name="content" autofocus="autofocus" placeholder="Content">
                    <input type="text" name="tag" placeholder="Tags" id="tag">
                    Important? <input type="radio" name="isImportant" autofocus="autofocus" label="Is this breakingnews?"/>
                    <br><br>
        			<input type="submit" class="btn btn-default" name="news-submit" value="Add To List"/>
        	</form>
