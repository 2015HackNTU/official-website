<!DOCTYPE html>
<html lang="en" ng-app="courseApp">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title>HackCourse</title>
    <link rel="shortcut icon" href="/img/favicon.ico">
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="css/course/course.css">
	<link rel="stylesheet" media="only screen and (max-width: 480px)"  href="css/course/course-small-device.css" />
</head>
<body ng-controller="courseCtrl">
	<div style="position: fixed; top: 0; left: 0; z-index: 999; width: 100%; height: auto;">
		<% include ../shared/navbar.ejs %>
	</div>
	<div id="panels" class="panels">
		<a href="#ios" class="panel dark-orange" ng-click="clickOn('ror')" id="ror"
		ng-class="{'panelNow': section=='ror', 'panelHide': section!='ror'&&section!=''}">
			<div class="content" ng-hide="section!=''">ROR</div>
			<div class="inlineTitle" ng-show="section=='ror'">{{content.title}}</div>
			<div class="inlineText"  ng-show="section=='ror'">{{content.text}}</div>
			<!-- <div class="color">
				<div class="footer"></div>
			</div> -->
		</a>
		<a href="#uiux" class="panel yellow" ng-click="clickOn('ios')" id='ios'
		ng-class="{panelNow: section==='ios', 'panelHide': section!='ios'&&section!=''}">
			<div class="content" ng-hide="section!=''">IOS</div>
			<div class="inlineTitle" ng-show="section=='ios'">{{content.title}}</div>
			<div class="inlineText"  ng-show="section=='ios'">{{content.text}}</div>
			<!-- <div class="color">
				<div class="footer"></div>
			</div> -->
		</a>

		<a href="#iot" class="panel light-orange" ng-click="clickOn('uiux')" id="uiux"
		ng-class="{panelNow: section==='uiux', 'panelHide': section!='uiux'&&section!=''}">
			<div class="content" ng-hide="section!=''">UI<br>UX</div>
			<div class="inlineTitle" ng-show="section=='uiux'">{{content.title}}</div>
			<div class="inlineText" ng-show="section=='uiux'">{{content.text}}</div>
			<!-- <div class="color">
				<div class="footer"></div>
			</div> -->
		</a>

		<a href="#ror" class="panel red" ng-click="clickOn('iot')" id="iot"
		ng-class="{panelNow: section==='iot', 'panelHide': section!='iot'&&section!=''}">
			<div class="content" ng-hide="section!=''">IOT</div>
			<div class="inlineTitle" ng-show="section=='iot'">{{content.title}}</div>
			<div class="inlineText"  ng-show="section=='iot'">{{content.text}}</div>
			<!-- <div class="color">
				<div class="footer"></div>
			</div> -->
		</a>

		<div class="panels-black"></div>
		<!-- <i class="float fa fa-angle-double-down"></i> -->
	</div>
	<script type="text/javascript">
		$(function() {
		  $('a[href*=#]:not([href=#])').click(function() {
		    if (location.pathname.replace(/^\//,'') == this.pathname.replace(/^\//,'') && location.hostname == this.hostname) {
		      var target = $(this.hash);
		      target = target.length ? target : $('[name=' + this.hash.slice(1) +']');
		      if (target.length) {
		        $('a').click(function(){
				    $('html, body').animate({
				        scrollTop: $('[id="' + $.attr(this, 'href').substr(1) + '"]').offset().top
				    }, 300);
				    return false;
				});
		        return false;
		      }
		    }
		  });
		});
	</script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.1.5/angular.min.js"></script>
	<script  src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0-rc.2/angular-route.js"></script>
	<script type="text/javascript" src="js/course/angular-animate.js"></script>
	<script src="js/course/course.js"></script>
</body>
</html>
